<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salon_yildiz"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/star_big_on" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salon_arama"
        android:src="@android:drawable/stat_sys_phone_call"
        android:layout_alignBottom="@+id/salon_yildiz"
        android:layout_toLeftOf="@+id/salon_yildiz"
        android:layout_alignTop="@+id/salon_yildiz" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salon_paylas"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/salon_yildiz"
        android:layout_toEndOf="@+id/salon_yildiz"
        android:src="@android:drawable/ic_menu_share" />
</RelativeLayout>